    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "commitizen": "^4.2.5",
    "esbuild": "^0.15.13",
    "esbuild-plugin-pino": "1.2.5",
    "eslint": "^8.27.0",
